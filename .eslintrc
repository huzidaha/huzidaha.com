{
  "parser" : "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "standard-jsx"
  ],
  "env": {
    "browser" : true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/jsx-no-bind": 0,
    "arrow-parens": 0,
    "no-class-assign": 0
  },
  "globals": {
    "React": true
  }
}
