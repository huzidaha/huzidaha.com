{
  "name": "huzidaha.com",
  "version": "0.1.0",
  "description": "huzidaha.com",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "dev": "babel-node ./server/index.js",
    "start": "NODE_ENV=production node ./index.js",
    "build": "rm -rf build && next build && babel ./server/ --out-dir build && mv .next ./build && cp -a static ./build/ && cp package.json ./build/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huzidaha/huzidaha.com.git"
  },
  "author": "huzidaha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huzidaha/huzidaha.com/issues"
  },
  "babel": {
    "presets": [
      "next/babel",
      "es2015"
    ],
    "plugins": [
      [
        "import",
        [
          {
            "libraryName": "antd"
          }
        ]
      ]
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": {
      "presets": [
        "@ava/stage-4",
        "@ava/transform-test-files"
      ]
    }
  },
  "homepage": "https://github.com/huzidaha/huzidaha.com#readme",
  "dependencies": {
    "highlight.js": "^9.9.0",
    "joi": "^10.1.0",
    "koa": "^2.0.0",
    "koa-body": "^1.6.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^7.1.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "mongoose": "^4.7.6",
    "next": "^2.0.0-beta.18",
    "ramda": "^0.23.0",
    "ramda-fantasy": "^0.7.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-import": "^1.1.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-node5": "^12.0.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-jsx": "^3.2.0",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1"
  }
}
